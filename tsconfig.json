{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false
  }
}